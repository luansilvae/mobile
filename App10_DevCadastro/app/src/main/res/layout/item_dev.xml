<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_height="96dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imgFoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/theodore">

            </ImageView>
            <TextView
                    android:id="@+id/txtStack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Full Stack"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmail"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imgFoto">
            </TextView>
            <TextView
                    android:id="@+id/txtNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Teobaldo Almeida"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imgFoto">
            </TextView>
            <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="esquilouco@gmail.com"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imgFoto"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome">
            </TextView>
            <TextView
                    android:id="@+id/txtSenioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Pleno"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="30dp">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>